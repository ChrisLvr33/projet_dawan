;
; BIND data file for interfaces
;
$TTL    604800
@       IN      SOA     {{ansible_hostname}}.{{suffix_fqdn}}. root.{{suffix_fqdn}}. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      {{ansible_hostname}}.{{suffix_fqdn}}.
@	IN	MX	10	mx1.lvr.org.
{{ansible_hostname}}  IN   A  192.168.56.10
mx1	IN	A	192.168.56.100
mail1	IN	A	192.168.56.20
webmail	IN	A	192.168.56.30

