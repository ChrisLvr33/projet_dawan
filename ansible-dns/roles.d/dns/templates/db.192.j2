;
; BIND reverse data file for interfaces
;
$TTL    604800
$ORIGIN 56.168.192.in-addr.arpa.
@       IN      SOA     {{ansible_hostname}}.{{suffix_fqdn}}. root.{{suffix_fqdn}}. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      {{ansible_hostname}}.{{suffix_fqdn}}.
10      IN      PTR     {{ansible_hostname}}.{{suffix_fqdn}}.
20	IN	PTR	mail1.lvr.org.
100	IN	PTR	mx1.lvr.org.
30	IN	PTR	webmail.lvr.org.

